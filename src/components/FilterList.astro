---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<div class="filter-column fade-in">
  <h3 class="filter-title">{title}</h3>
  <ul class="filter-list">
    {items.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
</div>

<style>
  .filter-title {
    font-size: 1.25rem;
    font-weight: 500;
    margin-bottom: 2rem;
    color: var(--text-main);
  }

  .filter-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .filter-list li {
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--text-muted);
    margin-bottom: 1rem;
    border-bottom: 1px solid transparent;
    padding-bottom: 0.5rem;
  }
</style>
