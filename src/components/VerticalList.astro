---
interface Props {
  items: string[];
}

const { items } = Astro.props;
---

<div class="vertical-list">
  {items.map((item, index) => (
    <div class="list-item fade-in" style={`animation-delay: ${index * 0.1}s`}>
      {item}
    </div>
  ))}
</div>

<style>
  .vertical-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .list-item {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 500;
    color: var(--line-subtle);
    transition: color 0.3s ease;
    cursor: default;
  }

  .list-item:hover {
    color: var(--text-main);
  }
</style>
