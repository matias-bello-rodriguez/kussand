---
interface Props {
  imageSrc?: string;
  reversed?: boolean;
}

const { imageSrc, reversed = false } = Astro.props;
---

<div class:list={["editorial-grid", reversed && "reversed"]}>
  <div class="image-container">
    <div class="window-header">
      <span class="dot red"></span>
      <span class="dot yellow"></span>
      <span class="dot green"></span>
    </div>
    <div class="window-content">
      {imageSrc && <img src={imageSrc} alt="" loading="lazy" />}
      {!imageSrc && <div class="placeholder-image"></div>}
    </div>
  </div>
  <div class="content-container">
    <slot />
  </div>
</div>

<style>
  .editorial-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    align-items: center;
  }

  /* Mac Window Style */
  .image-container {
    width: 100%;
    /* aspect-ratio: 4/3; */ /* Let content define it or move aspect ratio to inner container */
    background-color: #fff; 
    overflow: hidden;
    border-radius: 12px;
    height: auto;
    box-shadow: 0 20px 50px -12px rgba(0,0,0,0.25);
    border: 1px solid rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
  }

  .window-header {
    background: #f1f1f1; /* Light gray window bar */
    padding: 12px 16px;
    display: flex;
    gap: 8px;
    border-bottom: 1px solid rgba(0,0,0,0.05);
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.red { background-color: #FF5F56; box-shadow: 0 0 0 1px #E0443E inset; }
  .dot.yellow { background-color: #FFBD2E; box-shadow: 0 0 0 1px #DEA123 inset; }
  .dot.green { background-color: #27C93F; box-shadow: 0 0 0 1px #1AAB29 inset; }

  .window-content {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #e5e5e5;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background-color: var(--line-subtle);
  }
  
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
    display: block; /* Removes bottom space */
  }
  
  .editorial-grid:hover img {
    transform: scale(1.03);
  }

  @media (min-width: 768px) {
    .editorial-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }

    .editorial-grid.reversed {
      direction: rtl; /* Simple way to swap columns visually */
    }
    
    .editorial-grid.reversed .content-container {
      direction: ltr; /* Reset text direction */
      padding-left: 0;
      padding-right: 1.5rem;
    }
    
    .content-container {
      padding-left: 1.5rem;
    }
  }
</style>
