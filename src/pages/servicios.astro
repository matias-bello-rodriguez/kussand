---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import FadeIn from '../components/FadeIn.astro';
import Text from '../components/Text.astro';
import Button from '../components/Button.astro';
import ContactModal from '../components/ContactModal.astro';
import Editorial from '../components/Editorial.astro';
---

<Layout 
    title="Servicios | Kussand"
    description="Ofrecemos desarrollo de software a medida, integraciones ERP, consultoría técnica e infraestructura cloud para optimizar procesos y escalar negocios."
>
	<main>
    <Section paddingTop="clamp(10rem, 18vh, 14rem)" className="services-hero">
            <FadeIn>
                <Editorial imageSrc="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=1200&auto=format&fit=crop">
                    <Text variant="label" className="mb-4">Nuestros Servicios</Text>
                    <Text variant="statement" className="mb-8">
                        Ingeniería aplicada a objetivos reales de negocio.
                    </Text>
                    <Text variant="body">
                        Diseñamos soluciones que ordenan procesos, mejoran el control operativo y generan resultados medibles.
                    </Text>
                </Editorial>
            </FadeIn>
		</Section>

        <Section>
            <div class="grid-services">
                <FadeIn>
                    <div class="service-item">
                        <Text variant="subheading" className="mb-2">Desarrollo a Medida</Text>
                        <Text variant="body">
                            Soluciones alineadas a tus procesos, con foco en claridad operativa, velocidad y escalabilidad.
                        </Text>
                    </div>
                </FadeIn>
                <FadeIn delay="100">
                    <div class="service-item">
                        <Text variant="subheading" className="mb-2">Integraciones ERP</Text>
                        <Text variant="body">
                            Conectamos tus sistemas para eliminar fricción y habilitar datos confiables en tiempo real.
                        </Text>
                    </div>
                </FadeIn>
                <FadeIn delay="200">
                    <div class="service-item">
                        <Text variant="subheading" className="mb-2">Consultoría Técnica</Text>
                        <Text variant="body">
                            Evaluamos arquitectura, riesgos y oportunidades para priorizar acciones con impacto.
                        </Text>
                    </div>
                </FadeIn>
                <FadeIn delay="300">
                    <div class="service-item">
                        <Text variant="subheading" className="mb-2">Infraestructura Cloud</Text>
                        <Text variant="body">
                            Diseñamos despliegues seguros y escalables con prácticas DevOps modernas.
                        </Text>
                    </div>
                </FadeIn>
            </div>
        </Section>

		<Section>
            <div class="mt-8 text-center">
                <FadeIn>
                	<Text variant="body" className="mb-4">¿Tienes un desafío técnico?</Text>
                </FadeIn>
                <FadeIn delay="100">
                    <Button id="open-contact-modal" className="trigger-contact-modal">Agenda una consultoría técnica</Button>
                </FadeIn>
            </div>
		</Section>

		<ContactModal />
	</main>
</Layout>

<style>
    .mb-2 { margin-bottom: 0.5rem; }
    .mb-4 { margin-bottom: 1rem; }
    .mb-8 { margin-bottom: 1.5rem; }
    .mt-8 { margin-top: 2rem; }
    .max-w-2xl { max-width: 42rem; }
    .text-center { text-align: center; }
    
    .grid-services {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2.5rem;
        margin-top: 1.5rem;
    }
    
    .service-item {
        padding-top: 1rem;
        border-top: 1px solid var(--line-subtle);
    }

</style>