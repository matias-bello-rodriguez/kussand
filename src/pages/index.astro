---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Text from '../components/Text.astro';
import Button from '../components/Button.astro';
import Editorial from '../components/Editorial.astro';
import VerticalList from '../components/VerticalList.astro';
import FilterList from '../components/FilterList.astro';
import FadeIn from '../components/FadeIn.astro';
import ContactModal from '../components/ContactModal.astro';
---

<Layout title="Kussand | Software con mentalidad de ingeniería">
	<main>
		<!-- 1. Hero -->
		<Section fullscreen backgroundImage="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2000&auto=format&fit=crop">
			<FadeIn>
				<Text as="h1" variant="hero" className="mb-8">Ideas claras, software real.</Text>
			</FadeIn>
			<FadeIn delay="100">
				<Text variant="sub">Kussand TI transforma necesidades de negocio en soluciones a medida.</Text>
			</FadeIn>
		</Section>

		<!-- 2. Statement -->
		<Section fullscreen backgroundImage="https://images.unsplash.com/photo-1487958449943-2429e8be8625?q=80&w=2000&auto=format&fit=crop" overlayTheme="dark">
			<FadeIn>
				<Text variant="statement">
					“Planificar bien acelera todo.”<br />
					<span style="color: var(--text-muted)">Arquitectura sólida, ejecución eficiente.</span>
				</Text>
			</FadeIn>
		</Section>

		<!-- 3. Editorial Block -->
		<Section>
			<FadeIn>
				<Editorial imageSrc="https://images.unsplash.com/photo-1541888946425-d81bb19240f5?q=80&w=1200&auto=format&fit=crop">
					<Text variant="body">
						Aplicamos enfoque de ingeniería a cada proyecto para entregar software confiable y escalable.
					</Text>
				</Editorial>
			</FadeIn>
		</Section>

		<!-- 4. Enfoque sistémico -->
		<Section fullscreen className="text-center" backgroundImage="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2000&auto=format&fit=crop" overlayTheme="light">
			<FadeIn>
				<Text variant="statement" className="mb-4">Software alineado al negocio.</Text>
			</FadeIn>
			<FadeIn delay="100">
				<Text variant="statement" className="mb-12" style="color: var(--text-muted)">Arquitectura que crece contigo.</Text>
			</FadeIn>
			<FadeIn delay="200">
				<Text variant="sub">Arquitectura · Datos · Escalabilidad</Text>
			</FadeIn>
		</Section>

		<!-- 5. Capas implícitas -->
		<Section dark>
			<div class="flex flex-col gap-24">
				<FadeIn>
					<Text variant="statement">Resultados medibles desde el diseño.</Text>
				</FadeIn>
				<FadeIn delay="100">
					<Text variant="statement" style="opacity: 0.7">Procesos conectados, datos confiables.</Text>
				</FadeIn>
				<FadeIn delay="200">
					<Text variant="statement" style="opacity: 0.4">Experiencia de usuario clara y efectiva.</Text>
				</FadeIn>
			</div>
		</Section>

		<!-- 6. Odoo reposicionado -->
		<Section>
			<FadeIn>
				<Editorial reversed imageSrc="https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=1200&auto=format&fit=crop">
					<Text variant="statement" className="mb-6">ERP con implementación experta.</Text>
					<Text variant="body">Configuramos, integramos y optimizamos para maximizar el valor operativo.</Text>
				</Editorial>
			</FadeIn>
		</Section>

		<!-- 7. Método -->
		<Section fullscreen backgroundImage="https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?q=80&w=2000&auto=format&fit=crop" overlayTheme="dark">
			<FadeIn className="flex justify-center">
				<VerticalList items={['Auditar', 'Estructurar', 'Desarrollar', 'Optimizar']} />
			</FadeIn>
		</Section>

		<!-- 8. Filtro elegante -->
		<Section>
			<div class="grid md:grid-cols-2 gap-16">
				<FadeIn>
					<FilterList 
						title="Trabajamos con:"
						items={[
							"Industrias complejas",
							"Logística y Operaciones",
							"Constructoras e Ingeniería"
						]}
					/>
				</FadeIn>
				<FadeIn delay="100">
					<FilterList 
						title="Evitamos:"
						items={[
							"Ideas sin modelo de negocio",
							"MVPs descartables",
							"Estética sobre función"
						]}
					/>
				</FadeIn>
			</div>
		</Section>

		<!-- 9. Cierre + CTA -->
		<Section fullscreen backgroundImage="https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=2000&auto=format&fit=crop" overlayTheme="light">
			<div class="text-center">
				<FadeIn>
					<Text variant="statement" className="mb-12">Convirtamos tu idea en software listo para operar.</Text>
				</FadeIn>
				<FadeIn delay="100">
					<div class="mt-8">
						<Button id="open-contact-modal" className="trigger-contact-modal">Agenda una consultoría técnica</Button>
					</div>
				</FadeIn>
			</div>
		</Section>
		
		<ContactModal />
	</main>
</Layout>

<style>
	.mb-4 { margin-bottom: 1rem; }
	.mb-6 { margin-bottom: 1.5rem; }
	.mb-8 { margin-bottom: 2rem; }
	.mb-12 { margin-bottom: 3rem; }
	.mt-8 { margin-top: 2rem; }
	.gap-16 { gap: 4rem; }
	.gap-24 { gap: 6rem; }
	.text-center { text-align: center; }
	.grid { display: grid; }
	.flex { display: flex; }
	.flex-col { flex-direction: column; }
	.justify-center { justify-content: center; }
	
	@media (min-width: 768px) {
		.md\:grid-cols-2 { grid-template-columns: 1fr 1fr; }
	}
</style>
